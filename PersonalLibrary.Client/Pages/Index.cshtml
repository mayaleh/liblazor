@page "/"




@if (State.IsLoggedIn)
{
    <div role="alert" aria-live="assertive" aria-atomic="true" class="toast" data-autohide="false">
        <div class="toast-header">
            <img src="..." class="rounded mr-2" alt="...">
            <strong class="mr-auto">Bootstrap</strong>
            <small>11 mins ago</small>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            Hello, world! This is a toast message.
        </div>
    </div>
}
    <div aria-live="polite" aria-atomic="true" style="position: relative; min-height: @minHei;">
        <div class="toast fade @ShowWarning" style="position: absolute; top: 0; right: 0;">
            <div style="min-width:200px;" class="toast-header bg-darck">
                <svg class="bd-placeholder-img rounded mr-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img"><rect fill="#007aff" width="100%" height="100%"></rect></svg>
                <strong class="mr-auto">Note</strong>
                <small>Info</small>
                <button type="button" onclick="@ClosePopup" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body">
                Welcome
            </div>
        </div>
    </div>

